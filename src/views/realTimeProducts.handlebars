<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/{{fileCss}}" />
  </head>
  <nav class="navbar navbar-expand-lg  bg-dark " data-bs-theme="dark">
    <div class="container-fluid ">
        <a class="navbar-brand" href="/products">Ecommerce</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse menuCollap " id="navbarSupportedContent">

            <div class=" ms-auto w-0 navBarOpt ">
                <div>
                    <a class="navbar-brand" href="/realtimeproducts">Gestionar Productos</a>
                    <a class="navbar-brand" href="/current">Perfil</a>
                </div>

                <div class="containerLogOut">
                    <p class="textoRol">Bienvenido : {{user.email}} </p>
                    <div class="infoUserNav"> 
                        <p class="textoRol">Rol :<i class="bi bi-person-fill"></i> {{user.rol}} </p>
                    <a href="/api/sessions/logout" type="button" class="btn btn-dark buttonLogOut">Cerrar Sesion <i
                            class="bi bi-box-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
  <body>
    <div>
      <div>
        <h1>Productos en tiempo Real</h1>
      </div>
      <h2>Agregar Producto</h2>
      <div class="formSyle">
        <form class="formCuerpo">
          <div>
            <input
              required
              type="text"
              name="title"
              id="titleId"
              placeholder="Titulo"
            />
            <input
              required
              type="number"
              name="price"
              id="priceId"
              placeholder="Precio"
            />
            <input
              required
              type="text"
              name="description"
              id="descriptionId"
              placeholder="Descripcion"
            />
            <input
              required
              type="text"
              name="category"
              id="categoryId"
              placeholder="Categoria"
            />
            <input
              type="text"
              name="thumbnail"
              id="thumbnailId"
              placeholder="Thumbnail"
            />
            <input
              required
              type="number"
              name="code"
              id="codeId"
              placeholder="Code"
            />
            <input
              required
              type="number"
              name="stock"
              id="stockId"
              placeholder="Stock"
            />
            <input type="checkbox" name="status" id="statusId" /><label
              for="status"
            >Estado</label>
          </div>
          <div>
            <input required type="submit" value="Enviar" />
          </div>
        </form>
      </div>

      <div>
        <h4>Lista de Productos en Tiempo Real</h4>
        <div id="inRealTime"> </div>
        {{! <div id="modal"></div> }}

        {{! MODALL }}

        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Editar Producto</h1>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body" id="formBody">
                <div id="modal"></div> 
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >Close</button>
               
              </div>
            </div>
          </div>
        </div>

      </div>

      <script
        src="https://cdn.socket.io/4.7.3/socket.io.min.js"
        integrity="sha384-+miq58Ltmjm+SSP5g8Ok6dpMO/6R4n8xe/x1Yj0Bdb9kiEz25LTnWv/GZQTRQamg"
        crossorigin="anonymous"
      ></script>
      <script src="/js/main.js"></script>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
      ></script>
    </div>
  </body>
</html>